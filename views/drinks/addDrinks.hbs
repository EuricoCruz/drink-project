<h2>Adicionar um novo drink ao meu perfil</h2>
<form class="form" action="/drinks/drinkAdd" method="post" enctype="multipart/form-data">
  <input type="hidden" name="owner" value="{{user._id}}">
  
  <label for="">name:</label>
  <input type="text" name="name">
<br><br>
 
  <label for="">Recipe:</label>
  <textarea name="recipe" id="recipe" cols="30" rows="10"></textarea>
<br><br>

  {{!-- <label for="">ingredients:</label>
  <input type="text" name="ingredients">
<br><br> --}}
  <label>type</label>
  <select name="type" id="type">
    <option value="Alcólico">Alcólico</option>
    <option value="Não Alcólico">Não Alcólico</option>
  </select>
  <br><br>
 
  <label>Image</label>
  <input type="file" name="photo">
  <br><br>
 
  <button type="submit">ADD</button>
</form>