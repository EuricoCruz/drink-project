<div class="container-perfil">
  <div class="main-question">
    <h1>Meu perfil</h1>
    </div>
</div>
<div class="profile-page">
  
<div class="container-info">
  <div class="profile-photo">
    <img src="{{user.photo}}" alt="minha foto">
  </div>

  <div class="profile-info">
    <p><span class="mini-info">nome:</span><br>{{user.name}}</p>
    <p><span class="mini-info">idade:</span><br>{{user.age}}</p>
    <p><span class="mini-info">cidade:</span><br>{{ user.city }}</p>
    <p><span class="mini-info">e-mail:</span><br>{{user.email}}</p>
    <p><span class="mini-info">profiss√£o:</span><br>{{user.profession}}</p>
    <div class="buttons">
      <button class="edit-button"><a href="/profile/edit-profile">Editar perfil</a></button>
      <button class="delete-button"><a href="/profile/delete/{{user._id}}">Deletar</a></button>
    </div>

  </div>

</div>
<div class="division">
  <hr>
</div>

<div class="container-mydrinks">
  <div class="mydrinks-title">
    <h1>Meus drinks</h1>
    </div>
</div>
<div class="mydrinks-container">

{{#each drink}}
  {{> drinkCard this}}
{{/each}}
</div>
<button class="add-drink"><a href="/drinks/add-drink">Adicionar drinque</a>

</div>


